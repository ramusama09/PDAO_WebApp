    <script>
        // Helper function to calculate age from birthDate
        function calculateAge(birthDate) {
            if (!birthDate) return '';
            const today = new Date();
            const birthDateObj = new Date(birthDate);
            let age = today.getFullYear() - birthDateObj.getFullYear();
            const monthDiff = today.getMonth() - birthDateObj.getMonth();
            
            if (monthDiff < 0 || (monthDiff === 0 && today.getDate() < birthDateObj.getDate())) {
                age--;
            }
            return age;
        }

        // Update your viewUser and editUser functions
        function viewUser(userId) {
            const userRef = firebase.database().ref('users/' + userId);
            userRef.once('value').then((snapshot) => {
                const user = snapshot.val() || {};
                const idCards = user.idCards || {};
                const modal = new bootstrap.Modal(document.getElementById('viewModal'));

                // Helper function to safely set form values
                const setFormValue = (name, value) => {
                    const element = document.querySelector(`#viewForm [name="${name}"]`);
                    if (element) {
                        element.value = value || '';
                    }
                };

                // Populate view modal with basic user info
                setFormValue('firstName', user.firstName);
                setFormValue('lastName', user.lastName);
                setFormValue('middleName', user.middleName);
                setFormValue('suffix', user.suffix);
                setFormValue('sex', user.sex);
                setFormValue('birthDate', user.birthDate);
                setFormValue('age', calculateAge(user.birthDate));
                setFormValue('email', user.email);
                setFormValue('contactNumber', user.contactNumber);
                setFormValue('addressLine1', user.addressLine1);
                setFormValue('addressLine2', user.addressLine2);
                setFormValue('bloodType', user.bloodType);
                setFormValue('disabilityType', user.disabilityType);
                setFormValue('emergencyContactName', user.emergencyContactName);
                setFormValue('emergencyContactNumber', user.emergencyContactNumber);

                // Populate ID card information
                setFormValue('pwdIdNo', idCards.pwdIdNo);
                setFormValue('dateIssued', idCards.dateIssued);
                setFormValue('expirationDate', idCards.expirationDate);
                setFormValue('frontID', idCards.frontID);
                setFormValue('backID', idCards.backID);

                modal.show();
            }).catch(error => {
                console.error('Error fetching user data:', error);
                alert('Failed to load user data. Please try again.');
            });
        }

        function editUser(userId) {
            const userRef = firebase.database().ref('users/' + userId);
            userRef.once('value').then((snapshot) => {
                const user = snapshot.val() || {};
                const idCards = user.idCards || {};
                const modal = new bootstrap.Modal(document.getElementById('editModal'));

                // Helper function to safely set form values
                const setFormValue = (name, value) => {
                    const element = document.querySelector(`#editForm [name="${name}"]`);
                    if (element) {
                        element.value = value || '';
                    }
                };

                // Populate edit form with basic user info
                setFormValue('firstName', user.firstName);
                setFormValue('lastName', user.lastName);
                setFormValue('middleName', user.middleName);
                setFormValue('suffix', user.suffix);
                setFormValue('sex', user.sex);
                setFormValue('birthDate', user.birthDate);
                setFormValue('age', calculateAge(user.birthDate));
                setFormValue('email', user.email);
                setFormValue('contactNumber', user.contactNumber);
                setFormValue('addressLine1', user.addressLine1);
                setFormValue('addressLine2', user.addressLine2);
                setFormValue('bloodType', user.bloodType);
                setFormValue('disabilityType', user.disabilityType);
                setFormValue('emergencyContactName', user.emergencyContactName);
                setFormValue('emergencyContactNumber', user.emergencyContactNumber);

                // Populate ID card information
                setFormValue('pwdIdNo', idCards.pwdIdNo);
                setFormValue('dateIssued', idCards.dateIssued);
                setFormValue('expirationDate', idCards.expirationDate);
                setFormValue('frontID', idCards.frontID);
                setFormValue('backID', idCards.backID);

                // Store the userId for use in form submission
                document.getElementById('editForm').dataset.userId = userId;

                // Add event listener for birthDate changes
                const birthDateInput = document.querySelector('#editForm [name="birthDate"]');
                const ageInput = document.querySelector('#editForm [name="age"]');
                
                birthDateInput.addEventListener('change', function() {
                    ageInput.value = calculateAge(this.value);
                });

                modal.show();
            }).catch(error => {
                console.error('Error fetching user data:', error);
                alert('Failed to load user data. Please try again.');
            });
        }

        // Handle edit form submission
        document.getElementById('editForm').addEventListener('submit', (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            const updatedData = Object.fromEntries(formData.entries());
            const userId = e.target.dataset.userId;

            if (!userId) {
                alert('Error: User ID not found!');
                return;
            }

            // Calculate age before updating
            updatedData.age = calculateAge(updatedData.birthDate);

            // Restructure the data to match the database schema
            const dataToUpdate = {
                ...updatedData,
                idCards: {
                    pwdIdNo: updatedData.pwdIdNo,
                    dateIssued: updatedData.dateIssued,
                    expirationDate: updatedData.expirationDate,
                    frontID: updatedData.frontID,
                    backID: updatedData.backID
                }
            };

            // Remove the ID card fields from the root level
            delete dataToUpdate.pwdIdNo;
            delete dataToUpdate.dateIssued;
            delete dataToUpdate.expirationDate;
            delete dataToUpdate.frontID;
            delete dataToUpdate.backID;

            // Update Firebase data
            firebase.database().ref('users/' + userId).update(dataToUpdate)
                .then(() => {
                    bootstrap.Modal.getInstance(document.getElementById('editModal')).hide();
                    alert('Successfully updated!');
                })
                .catch((error) => {
                    console.error('Error updating:', error);
                    alert('Update failed: ' + error.message);
                });
        });
    </script>
